{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "allowJs": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "**/*.spec.ts"],
  "typeRoots": ["./types"],
  "types": [
    "node",
    "jsonwebtoken",
    "express",
    "mongoose",
    "bcrypt",
    "mongoose-unique-validator"
  ]
}
