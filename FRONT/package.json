{
  "name": "trackalories",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "18.12.0",
    "npm": "8.19.2"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "node-sass": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.2",
    "react-scripts": "^5.0.1",
    "victory": "^36.6.8",
    "web-vitals": "^3.1.1",
    "zustand": "^4.3.6"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint . --fix",
    "eject": "react-scripts eject",
    "css-build": "node-sass --omit-source-map-url  src/sass/mystyles.scss src/App.css",
    "css-watch": "npm run css-build -- --watch",
    "css-start": "npm run css-watch",
    "cypress": "REACT_APP_TEST='true' npm start & cypress open",
    "cypress:headless": "REACT_APP_TEST='true' npm start & cypress run --headed",
    "stop": "killall node"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:cypress/recommended"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^13.5.0",
    "bulma": "^0.9.4",
    "cypress": "^12.7.0",
    "cypress-localstorage-commands": "^2.2.2",
    "eslint-plugin-cypress": "^2.12.1",
    "prettier": "^2.6.2"
  }
}
